Config { font             = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , borderColor      = "black"
       , border           = TopB
       , bgColor          = "black"
       , fgColor          = "green"
       , position         = TopW L 96
       , hideOnStart      = False
       , allDesktops      = True
       , overrideRedirect = False
       -- , Persistent       = True -- Makes it not show up on startup?
       , lowerOnStart     = True
       -- , commands = [ Run Network "wlp3s0" ["-L","0","-H","32","--normal","green","--high","red"] 100
        commands = [  Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 30
                    , Run Memory ["-t","M <usedratio>%"] 100
                    , Run Date "%a %b %d %I:%M%p " "date" 300
                    , Run StdinReader
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | <fc=#ee9a00>%date%</fc>"
       }
