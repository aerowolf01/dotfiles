Config { font             = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , borderColor      = "black"
       , border           = TopB
       , bgColor          = "black"
       , fgColor          = "green"
       , position         = TopW L 96
       , hideOnStart      = False
       , allDesktops      = True
       , overrideRedirect = False
       -- , Persistent       = True -- Makes it not show up on startup?
       , lowerOnStart     = True
        commands = [  Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 30
                    , Run Memory ["-t","M <usedratio>%"] 100
                    , Run Date "%a %b %d %I:%M%p" "date" 300
                    , Run StdinReader
                    , Run Network "enp3s0" ["--template", "v<rx>kb ^<tx>kb",
                    "-L","10000","-H","100000", -- unit = bytes/s
                    "--low","green","--normal","yellow","--high","red"] 20
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %enp3s0% |<fc=#ee9a00>%date%</fc> "
       }
